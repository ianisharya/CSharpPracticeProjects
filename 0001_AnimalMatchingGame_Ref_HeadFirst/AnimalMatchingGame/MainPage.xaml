                    BackgroundColor = "LightBlue" BorderColor = "Black" BorderWidth = "1"
                    Clicked = "AnimalButton_Clicked" />
                
                <Button HeightRequest = "100" WidthRequest = "100" FontSize = "60"
                    BackgroundColor = "LightBlue" BorderColor = "Black" BorderWidth = "1"
                    Clicked = "AnimalButton_Clicked" />
                <Button HeightRequest = "100" WidthRequest = "100" FontSize = "60"
                    BackgroundColor = "LightBlue" BorderColor = "Black" BorderWidth = "1"
                    Clicked = "AnimalButton_Clicked" />
                <Button HeightRequest = "100" WidthRequest = "100" FontSize = "60"
                    BackgroundColor = "LightBlue" BorderColor = "Black" BorderWidth = "1"
                    Clicked = "AnimalButton_Clicked" />
                <Button HeightRequest = "100" WidthRequest = "100" FontSize = "60"
                    BackgroundColor = "LightBlue" BorderColor = "Black" BorderWidth = "1"
                    Clicked = "AnimalButton_Clicked" />
                
                <Button HeightRequest = "100" WidthRequest = "100" FontSize = "60"
                    BackgroundColor = "LightBlue" BorderColor = "Black" BorderWidth = "1"
                    Clicked = "AnimalButton_Clicked" />
                <Button HeightRequest = "100" WidthRequest = "100" FontSize = "60"
