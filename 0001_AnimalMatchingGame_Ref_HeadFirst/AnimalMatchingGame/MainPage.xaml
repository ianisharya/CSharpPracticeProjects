                    BackgroundColor = "LightBlue" BorderColor = "Black" BorderWidth = "1"
                    Clicked = "AnimalButton_Clicked" />
                <Button HeightRequest = "100" WidthRequest = "100" FontSize = "60"
                    BackgroundColor = "LightBlue" BorderColor = "Black" BorderWidth = "1"
                    Clicked = "AnimalButton_Clicked" />
                <Button HeightRequest = "100" WidthRequest = "100" FontSize = "60"
                    BackgroundColor = "LightBlue" BorderColor = "Black" BorderWidth = "1"
                    Clicked = "AnimalButton_Clicked" />
            
            </FlexLayout>

            <Label x:Name = "TimeElapsed" Text = "Time Elapsed: 0.0 seconds" FontSize = "Large" />
            
            <Label x:Name = "BestScore" Text = "Best Score: 0.0 seconds" FontSize = "Large" IsVisible ="false" />
            
            <ProgressBar x:Name = "ProgressBar" Progress = "0.0" IsVisible = "false"/>

        </VerticalStackLayout>
    </ScrollView>

